    {
      "parameters": {
        "jsCode": "// Check if we got any messages and filter for unread inbound\nconst response = $input.item.json;\n\nif (!response.messages || !Array.isArray(response.messages)) {\n  return [];\n}\n\n// Filter for unread inbound messages only\nconst unreadInbound = response.messages.filter(msg => \n  msg.direction === 'inbound' && msg.status === 'unread'\n);\n\nif (unreadInbound.length === 0) {\n  return [];\n}\n\n// Return each message as a separate item\nreturn unreadInbound.map(msg => ({\n  json: {\n    message_id: msg.id,\n    phone_number: msg.phone_number,\n    content: msg.content,\n    timestamp: msg.timestamp,\n    reply_text: `Thanks for your message! Received: \"${msg.content.substring(0, 40)}${msg.content.length > 40 ? '...' : ''}\"`\n  }\n}));"
      },
      "id": "filter-unread",
      "name": "Filter Unread Messages",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
