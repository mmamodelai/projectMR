    {
      "parameters": {
        "jsCode": "// Extract AI response and preserve message data\nconst aiResponse = $input.first().json.output;\nconst originalMessage = $('Filter Unread Messages').first().json;\n\nreturn {\n  json: {\n    message_id: originalMessage.id,\n    phone_number: originalMessage.phone_number,\n    message: aiResponse,\n    original_message: originalMessage.content\n  }\n};"
