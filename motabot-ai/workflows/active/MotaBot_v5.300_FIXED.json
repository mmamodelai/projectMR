    {
      "parameters": {
        "jsCode": "// v5.300: Pass phone number and message to AI\n// AI will use tools to look up data from Supabase\nconst currentMessage = $input.item.json;\nconst phoneNumber = currentMessage.phone_number;\nconst incomingMessage = currentMessage.incoming_message;\nconst messageId = currentMessage.message_id;\n\n// Simple context - AI will use tools for detailed data\nconst conversation = `Customer Phone: ${phoneNumber}\\n\\nCustomer Question: ${incomingMessage}\\n\\nUse your database query tools to answer this question with accurate data from Supabase.`;\n\nreturn {\n  json: {\n    chatInput: conversation,\n    phone_number: phoneNumber,\n    message_id: messageId\n  }\n};"
      },
